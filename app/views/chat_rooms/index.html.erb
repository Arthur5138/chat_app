<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Chat rooms</h1>

<p class="lead"><%= link_to 'New chat room', new_chat_room_path, class: 'btn btn-primary' %></p>

<ul>
  <%= render @chat_rooms %>
</ul>

<% if user_signed_in? %>
  <%= link_to('ログアウト', destroy_user_session_path, :method => :delete) %>
<% else %>
  <%= link_to('ログイン', new_user_session_path) %>
<% end %>